package com.oms.order.orderservice.service;

import org.springframework.web.client.RestTemplate;

import com.oms.cart.cartservice.model.Products;

public class OrderServiceImpl implements OrderService {
	
	
	@Override
	public void getAllProducts() {
		RestTemplate restTemplate = new RestTemplate();

		Products[] productsList = restTemplate.getForObject("http://localhost:8082/allproducts", Products[].class);

		System.out.println("The Product list is :" + productsList.toString());

		for (Products products : productsList) {
			System.out.println(products.getProductID());
			System.out.println(products.getProductName());
		}
		return productsList;
		
	}

	@Override
	public void placedOrder() {
		
		
	}

	

}
