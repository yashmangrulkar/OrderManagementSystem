package com.oms.order.orderservice.service;

import java.util.ArrayList;
import java.util.Arrays;
import java.util.HashMap;
import java.util.List;
import java.util.Map;

import org.springframework.web.client.RestTemplate;

import com.oms.order.orderservice.model.Products;


public class OrderServiceImpl implements OrderService {
	
	
	@Override
	public List<Products> getAllProducts(int cartId) {
		RestTemplate restTemplate = new RestTemplate();
		Map<String, Integer> uriVariables = new HashMap<>();
		uriVariables.put("cartId", cartId);
		
		Products[] productsList = restTemplate.getForObject("http://localhost:8084/fetchCart/{cartId}", Products[].class);
		return productsList;
		
	}

	@Override
	public void placedOrder() {
		Products[] prodArray = getAllProducts();
		List<Products> productList = Arrays.asList(prodArray);
		if(productList != null) {
			
		}
		
		
	}

	

}
